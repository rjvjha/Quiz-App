                style="@style/QuestionStyle"
                android:text="@string/q5" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <!-- Change the RadioButton to EditText -->
                <EditText
                    android:id="@+id/edit_text_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/q5aHint"
                    android:inputType="text"
                    android:textColorHint="@android:color/holo_green_dark" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/q6_text_view"
                style="@style/QuestionStyle"
                android:text="@string/q6" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
