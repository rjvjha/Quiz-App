<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rahul.quizapp.MainActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5ABEA3">

        <ImageView
            android:id="@+id/quiz_Image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz_icon" />

        <TextView
            android:id="@+id/quizTag_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/quiz_Image_view"
            android:text="@string/quiz_tag"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/questions_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/quizTag_text_view"
            android:layout_below="@id/quizTag_text_view"
            android:paddingTop="8dp"
            android:text="@string/questions_tag" />

        <TextClock
            android:id="@+id/text_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="8dp"
            android:textSize="16sp" />

        <Chronometer
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/text_clock"
            android:layout_below="@id/text_clock"
            android:paddingTop="8dp"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/q1_text_view"
                style="@style/QuestionStyle"
                android:text="@string/q1" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RadioGroup
                    android:id="@+id/radio_group_answers_q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_ans_q1a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q1a" />

                    <RadioButton
                        android:id="@+id/radio_ans_q1b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q1b" />

                    <RadioButton
                        android:id="@+id/radio_ans_q1c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q1c" />

                    <RadioButton
                        android:id="@+id/radio_ans_q1d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q1d" />
                </RadioGroup>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/q2_text_view"
                style="@style/QuestionStyle"
                android:text="@string/q2" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
