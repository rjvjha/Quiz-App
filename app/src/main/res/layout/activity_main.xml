                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_ans_q2a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q2a" />

                    <RadioButton
                        android:id="@+id/radio_ans_q2b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q2b" />

                    <RadioButton
                        android:id="@+id/radio_ans_q2c"
