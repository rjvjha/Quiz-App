                android:layout_margin="4dp">

                <RadioGroup
                    android:id="@+id/radio_group_answers_q10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_ans_q10a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q10a" />

                    <RadioButton
                        android:id="@+id/radio_ans_q10b"
