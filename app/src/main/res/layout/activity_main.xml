            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">
                <!-- Change the RadioButton to CheckBox -->
                <CheckBox
                    android:id="@+id/checkBox_ans_q7d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/q7d"
                    android:textSize="16sp" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/q8_text_view"
                style="@style/QuestionStyle"
                android:text="@string/q8" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RadioGroup
                    android:id="@+id/radio_group_answers_q8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_ans_q8a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q8a" />

                    <RadioButton
                        android:id="@+id/radio_ans_q8b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q8b" />

                    <RadioButton
                        android:id="@+id/radio_ans_q8c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q8c" />

                    <RadioButton
                        android:id="@+id/radio_ans_q8d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q8d" />
                </RadioGroup>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/q9_text_view"
                style="@style/QuestionStyle"
                android:text="@string/q9" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RadioGroup
                    android:id="@+id/radio_group_answers_q9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_ans_q9a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/q9a" />

                    <RadioButton
